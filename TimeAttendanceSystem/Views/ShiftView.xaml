                            <Label Content="Sunday:" HorizontalAlignment="Left" Margin="253,245,0,0" VerticalAlignment="Top"/>
                            <TextBox HorizontalAlignment="Left" Height="26" Margin="325,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" Text="{Binding selectedShift.TueMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding isEnabled}"/>
                            <TextBox HorizontalAlignment="Left" Height="26" Margin="325,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" Text="{Binding selectedShift.WedMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding isEnabled}"/>
                            <TextBox HorizontalAlignment="Left" Height="26" Margin="325,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" Text="{Binding selectedShift.ShiftThuMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding isEnabled}"/>
