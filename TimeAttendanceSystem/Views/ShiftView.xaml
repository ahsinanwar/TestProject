                            <Label Content="Tuesday:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="8.261,8.124" Margin="249,87,0,0"/>
                            <Label Content="Wednesday:" HorizontalAlignment="Left" Margin="231,118,0,0" VerticalAlignment="Top"/>
                            <Label Content="Thursday:" HorizontalAlignment="Left" Margin="244,150,0,0" VerticalAlignment="Top"/>
                            <Label Content="Friday:" HorizontalAlignment="Left" Margin="260,182,0,0" VerticalAlignment="Top"/>
