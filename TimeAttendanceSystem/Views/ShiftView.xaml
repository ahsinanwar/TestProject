                            <CheckBox Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,160,0,0"/>
                            <CheckBox Content="" HorizontalAlignment="Left" Margin="100,182,0,0" VerticalAlignment="Top"/>
                            <Label Content="Work Minuts" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="375,0,0,589" FontSize="22"/>
                            <Label Content="Monday:" HorizontalAlignment="Left" Margin="249,54,0,0" VerticalAlignment="Top"/>
