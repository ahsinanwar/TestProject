                            <Label Content="Margin" HorizontalAlignment="Left" Margin="418,6,0,0" VerticalAlignment="Top" FontSize="20"/>
                            <Label Content="Late In:" HorizontalAlignment="Left" Margin="419,56,0,0" VerticalAlignment="Top"/>
                            <Label Content="Late Out:" HorizontalAlignment="Left" Margin="409,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.23,0.497"/>
                            <Label Content="Early In:" HorizontalAlignment="Left" Margin="416,118,0,0" VerticalAlignment="Top"/>
                            <Label Content="Early Out:" HorizontalAlignment="Left" Margin="406,151,0,0" VerticalAlignment="Top"/>
                            <Label Content="Minut Work:" HorizontalAlignment="Left" Margin="391,182,0,0" VerticalAlignment="Top"/>
                            <TextBox HorizontalAlignment="Left" Height="26" Margin="489,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Text="{Binding selectedShift.LateIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding isEnabled}" RenderTransformOrigin="0.42,1.077"/>
                            <TextBox HorizontalAlignment="Left" Height="26" Margin="489,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Text="{Binding selectedShift.LateOut, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding isEnabled}"/>
                            <TextBox HorizontalAlignment="Left" Height="26" Margin="489,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Text="{Binding selectedShift.EarlyIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding isEnabled}"/>
                            <TextBox HorizontalAlignment="Left" Height="26" Margin="489,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Text="{Binding selectedShift.EarlyOut, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding isEnabled}"/>
                            <TextBox HorizontalAlignment="Left" Height="26" Margin="489,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Text="{Binding selectedShift.MinHrs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding isEnabled}"/>

                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>


